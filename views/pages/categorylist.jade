extends ../layout

block content 
	.container
		.row
			.col-md-9.col-md-offset-1
				table.table-hover.table-bordered.table
					thead
						tr
							th 分类名
							th 创建日期
							th 查看
							th 更新 
							th 删除
						tbody
							each item in categorys 
								tr(class="item-id-#{item._id}")
									td #{item.name}
									td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
									td: a(target="_blank" href="/admin/category/update/#{item._id}") 查看
									td: a(target="_blank" href="/admin/category/update/#{item._id}") 修改
									td 
										button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
	script(src="/js/admin.js")

